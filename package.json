{
  "name": "hard-edging-monorepo",
  "private": true,
  "version": "0.0.1",
  "description": "Hard-Edging: Hard, Fast, and Distributed. A peer-first web framework that minimizes backend egress to absurd levels.",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:packages",
    "build:packages": "npm run build --workspaces",
    "test": "npm run test:packages",
    "test:packages": "npm run test --workspaces",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "dev:template": "cd packages/cli/templates/minimal && npm install && npm run dev"
  },
  "workspaces": [
    "packages/*",
    "example-apps/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  }
}


